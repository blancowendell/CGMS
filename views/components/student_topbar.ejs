<div class="modal fade" id="notificationDetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="modalNotificationTitle">Notification Title</h5>
              <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
              <img id="modalNotificationImage" src="" alt="Notification Image" style="width: 100%;">
              <p id="modalNotificationDescription"></p>
              <p><strong>Created by:</strong> <span id="modalNotificationCreator"></span></p>
              <p><strong>Target Date:</strong> <span id="modalNotificationTargetDate"></span></p>
              <p><strong>End Date:</strong> <span id="modalNotificationEndDate"></span></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn bg-gradient-danger" id="deleteNotificationButton">Delete</button>
          </div>
      </div>
  </div>
