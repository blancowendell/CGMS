<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
            <h6>Admin Users</h6>
            <!-- Modal Trigger Button -->
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addadminusersmodal">
                Add New Users
            </button>
        </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0" id="dataTableAdminUsers">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Image</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Full Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Access Type</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Username</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Status</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Action</th>
                    </tr>             
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Modal Structure -->
    <div class="modal fade" id="addadminusersmodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" id="modal-header">
              <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
            colors="primary:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
              <h3 class="modal-title" id="exampleModalLabel">Add Users Admin</h3>
              <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                  <div class="col">
                    <div class="form-floating">
                      <select type="text" class="form-control border-form-modal" id="accesstype" name="accesstype" placeholder="First Name">
                        <option selected disabled>Access Type</option>
                      </select>
                      <label for="floatingInput">Access Type</label>
                      </div>
                  </div>
                  <br>
                  <div class="col">
                    <div class="form-floating">
                      <input type="text" class="form-control border-form-modal" id="fullname" name="fullname" placeholder="First Name">
                      <label for="floatingInput">Full Name</label>
                      </div>
                  </div>
                  <br>
                  <div class="col">
                    <div class="form-floating">
                      <input type="text" class="form-control border-form-modal" id="username" name="username" placeholder="First Name">
                      <label for="floatingInput">Username</label>
                      </div>
                  </div>
                  <br>
                  <div class="col">
                    <div class="form-floating position-relative">
                      <input type="password" class="form-control border-form-modal" id="password" name="password" placeholder="Password">
                      <button class="btn btn-ojt-pw toggle-password position-absolute" type="button" data-target="#password" style="right: 10px; top: 50%; transform: translateY(-50%);">
                        <i class="fas fa-eye"></i>
                      </button>
                      <label for="password">Password</label>
                    </div>
                  </div>
                  <br>
                  <div class="col">
                    <div class="form-floating position-relative">
                      <input type="password" class="form-control border-form-modal" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password">
                      <button class="btn btn-ojt-pw toggle-password position-absolute" type="button" data-target="#confirmpassword" style="right: 10px; top: 50%; transform: translateY(-50%);">
                        <i class="fas fa-eye"></i>
                      </button>
                      <label for="confirmpassword">Confirm Password</label>
                    </div>
                  </div>              
                  <br>
                  <div class="col">
                    <div class="form-floating">
                      <label class="form-label" for="customFile"></label>
                      <input type="file" name="announcementimage" id="announcementimage" class="form-control border-form-modal" accept="image/*">
                      <div class="text-center">
                        <img id="preview" src="https://via.placeholder.com/250" class="rounded border-form-modal" alt="placeholder">
                      </div>
                    </div>
                  </div>
                  <br>
                </form>
            </div>
            <div class="modal-footer" id="modal-footer">
              <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn bg-gradient-primary" id="adminusersavebtn">Save</button>
            </div>
          </div>
        </div>
    </div>



<!-- Edit Modal -->
