            <div class="col">
              <div class="form-floating position-relative">
                <input type="password" class="form-control border-form-modal" id="newpassword" name="newpassword" placeholder="Confirm Password">
                <button class="btn btn-ojt-pw toggle-password position-absolute" type="button" data-target="#newpassword" style="right: 10px; top: 50%; transform: translateY(-50%);">
