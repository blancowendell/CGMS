<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
            <h6>Personality Type</h6>
            <!-- Modal Trigger Button -->
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addpersonalitytypemodal">
                Add Personality Type
            </button>
        </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0" id="dataTablePersonalityType">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Code</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Strand Names</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Create Date</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Create By</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Action</th>
                    </tr>             
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!-- Modal Structure -->
<div class="modal fade" id="addpersonalitytypemodal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header" id="modal-header">
        <lord-icon src="https://cdn.lordicon.com/pdsourfn.json" stroke="bold"
        colors="success:#9cf4a7,secondary:#109121,tertiary:#ebfad1" class="db-hrmis"></lord-icon>
        <h3 class="modal-title" id="exampleModalLabel">Add Personality Type</h3>
        <i class='bx bx-x' data-bs-dismiss="modal" aria-label="CLose"></i>
        </div>
        <div class="modal-body" id="modal-body">
            <form>
            <div class="row g-3">
                <div class="col">
                    <div class="form-floating">
                        <input type="text" class="form-control border-form-modal" id="personalitycode" name="personalitycode" placeholder="Personality Code Name">
                        <label for="floatingInput">Personality Code Name</label>
                    </div>
                </div>
                <div class="col">
                    <label for="strandsSelection">Select Strands</label>
                    <div id="strandsSelection" class="border-form-modal" style="padding: 10px; max-height: 300px; overflow-y: auto;">
                        <!-- Checkboxes will be dynamically loaded here -->
                    </div>
                </div>
            </div>
            <br>
            <div class="row g-3">
                <div class="col">
                    <label for="description">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control border-form-modal" 
                                  id="personalitydesc" 
                                  name="personalitydesc" 
                                  placeholder="Description"
                                  style="min-height: 200px; max-height: none; height: auto; resize: vertical; padding: 12px;">
                        </textarea>
                    </div>
                </div>                      
            </div>
            <br>
            </form>
        </div>
        <div class="modal-footer" id="modal-footer">
        <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn bg-gradient-success" id="personalitysavebtn">Save</button>
        </div>
    </div>
    </div>
</div>



